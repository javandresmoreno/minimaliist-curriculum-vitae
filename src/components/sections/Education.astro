---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, url }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <a href={url} title={`Ver ${institution}`} target="_blank">
                    {institution}
                  </a>
                </div>

                <time>{startDate} - {endDate} </time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article a {
    color: #111;
    font-weight: 600;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
